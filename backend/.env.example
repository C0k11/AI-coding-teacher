# AI Coding Teacher - Backend Configuration
# Copy this file to .env and modify as needed

# ===================
# Application
# ===================
APP_NAME="AI Coding Teacher"
DEBUG=true

# ===================
# Database
# ===================
# SQLite (development)
DATABASE_URL=sqlite:///./coding_teacher.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/coding_teacher

# ===================
# Security
# ===================
# IMPORTANT: Change this to a secure random string in production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-in-production

# ===================
# Code Execution
# ===================
# Piston API (free, no key required)
PISTON_API_URL=https://emkc.org/api/v2/piston

# ===================
# Redis (Optional)
# ===================
# Enable Redis for caching (requires Redis server)
USE_REDIS=false
REDIS_URL=redis://localhost:6379
